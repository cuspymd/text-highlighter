{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.0",
  "description": "웹페이지에서 텍스트를 선택하고 색상으로 마킹할 수 있는 확장 프로그램",
  "permissions": ["storage", "contextMenus", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "commands": {
    "highlight_yellow": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "노란색으로 하이라이트"
    },
    "highlight_green": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "초록색으로 하이라이트"
    },
    "highlight_blue": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "파란색으로 하이라이트"
    },
    "highlight_pink": {
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "mac": "Command+Shift+4"
      },
      "description": "분홍색으로 하이라이트"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["minimap.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pages-list.html", "pages-list.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
